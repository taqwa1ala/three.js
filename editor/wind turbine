// Include Three.js library
import * as THREE from 'three';

// Set up the scene, camera, and renderer
const scene = new THREE.Scene();
const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
camera.position.set(0, 0, 20);

const renderer = new THREE.WebGLRenderer();
renderer.setSize(window.innerWidth, window.innerHeight);
document.body.appendChild(renderer.domElement);

// Create a base for the wind turbine
const baseGeometry = new THREE.CylinderGeometry(2, 2, 1, 20);
const baseMaterial = new THREE.MeshBasicMaterial({ color: 0x888888 });
const base = new THREE.Mesh(baseGeometry, baseMaterial);
scene.add(base);

// Create a tower for the wind turbine
const towerGeometry = new THREE.BoxGeometry(0.5, 8, 0.5);
const towerMaterial = new THREE.MeshBasicMaterial({ color: 0x606060 });
const tower = new THREE.Mesh(towerGeometry, towerMaterial);
tower.position.y = 4;
scene.add(tower);

// Create blades for the wind turbine
// This is just an example representation. You can create and position the blades as per your requirement.

// Add ambient light to the scene
const ambientLight = new THREE.AmbientLight(0x404040);
scene.add(ambientLight);

// Add directional light to the scene
const directionalLight = new THREE.DirectionalLight(0xffffff, 0.5);
directionalLight.position.set(1, 1, 0).normalize();
scene.add(directionalLight);

// Set the camera position
camera.position.set(25, 25, 25);
camera.lookAt(0, 0, 0);

// Render the scene
function animate() {
  requestAnimationFrame(animate);
  renderer.render(scene, camera);
}
animate();
